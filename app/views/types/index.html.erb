<p id="notice"><%= notice %></p>

<h1 class="text-center my-3">Type</h1>

<br>

<table class="table table-striped">
  <thead class="thead">
    <tr>
    <tr>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name.capitalize %></td>
        <td><%= link_to 'Show', type, class: 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_type_path(type), class: 'btn btn-outline-warning' %></td>
        <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Type', new_type_path, class: 'btn btn-outline-warning' %>
<%= link_to 'Bookmarks', bookmarks_path, class: 'btn btn-outline-info' %> 
<%= link_to 'Categories', categories_path, class: 'btn btn-outline-warning' %>
<br>

<h2 class="text-center my-3 font-weight-bold">Number of Markers per Type</h2>

