<% if bookmark.category %>
    <tr id="bookmark_<%= @bookmark.id %>">
        <td><%= bookmark.url %></td>
        <td><%= bookmark.category.name %></td>
        <td><%= bookmark.type.name %></td>
        <td><%= link_to 'Show', bookmark, class: 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark), remote: true, class: 'btn btn-outline-warning' %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
    </tr>
    <% end %>