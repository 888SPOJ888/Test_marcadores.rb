<p id="notice"><%= notice %></p>

<h1 class="text-center">Categories</h1>

<table class="table table-striped my-3">
  <thead class="thead">
    <tr>
      <th>Name</th>
      <th>Private</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.private ? 'Public' : 'Privacy' %></td>
        <td><%= category.category_id %></td>
        <td><%= link_to 'Show', category, class: 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-outline-warning' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: 'btn btn-outline-info' %>
<%= link_to 'Bookmarks', bookmarks_path, class: 'btn btn-outline-warning' %>
<%= link_to 'Types', types_path, class: 'btn btn-outline-info' %>
