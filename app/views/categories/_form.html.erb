<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :bookmar_reference_ID %>
    <%= form.text_field :bookmark_id %>
  </div>

  <div class="field">
    <%= form.label 'Name Category' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :private %>
    <%= form.check_box :private %>
  </div>

  <div class="field my-3"> 
    <%= form.label 'Subcategory:' %>
    <%= form.collection_select :category_id, @categories, :id, :name, {prompt: 'Selecciona una categoria'}, {class: 'custom-select'} %><span class="font-weight-bold">Omitir si es Categoria general</span>
  </div>

  <div class="actions">
    <%= form.submit 'Create Category', class: 'btn btn-outline-info' %>
  </div>
<% end %>
